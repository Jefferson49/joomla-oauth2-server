<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="1.0.0" method="upgrade"> 
	<name>COM_MINIORANGE_OAUTHSERVER</name>
	<creationDate>2024-09-11</creationDate>
	<author>Jefferson49</author>
 	<authorEmail>sexypolling.reloaded@gmail.com</authorEmail>
    <authorUrl>https://github.com/Jefferson49</authorUrl>
    <copyright>Copyright (c) 2016 miniOrange. All Rights Reserved. Copyright (c) 2024 Jefferson49</copyright>
	<license>GNU/GPLv3</license>
	<version>1.0.0</version>
	<description>COM_MINIORANGE_OAUTHSERVER_DESCRIPTION</description>
 
	<install> <!-- Runs on install -->
		<sql>
			<file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
		</sql>
	</install>
	<uninstall> <!-- Runs on uninstall -->
		<sql>
			<file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
		</sql>
	</uninstall>
	<update> 
	<!-- Runs on update --> 
        <schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
			<!-- <schemapath type="sqlsrv">sql/updates/sqlsrv</schemapath> -->
		</schemas>
    </update> 
		
	<administration>
		<!-- Administration Menu Section -->
		<menu link="option=com_miniorange_oauthserver&amp;view=accountsetup" view="accountsetup" alt="Joomla OAuth Server">COM_MINIORANGE_OAUTHSERVER_MENU</menu>
		<submenu>
			<menu link="option=com_miniorange_oauthserver&amp;view=accountsetup&amp;tab-panel=overview" view="accountsetup">COM_MINIORANGE_OAUTHSERVER_OVERVIEW</menu>
			<menu link="option=com_miniorange_oauthserver&amp;view=accountsetup&amp;tab-panel=configuration" view="accountsetup">COM_MINIORANGE_OAUTHSERVER_CONFIGURATION</menu>
			<menu link="option=com_miniorange_oauthserver&amp;view=accountsetup&amp;tab-panel=advancesettings" view="accountsetup">COM_MINIORANGE_OAUTHSERVER_SETTINGS</menu>
		</submenu>
		
		<files folder="admin">
			<!-- Admin Main File Copy Section -->
			<filename>index.html</filename>
			<filename>miniorange_oauthserver.php</filename>
			<filename>controller.php</filename>
			<!-- helper files section -->
			<folder>assets</folder>
			<!-- helper files section -->
			<folder>helpers</folder>
			<!-- SQL files section -->
			<folder>sql</folder>
			<!-- models files section -->
			<folder>models</folder>
			<!-- views files section -->
			<folder>views</folder>
			<!-- controllers files section -->
			<folder>controllers</folder>
		</files>
		<languages folder="admin/language">
        	<language tag="en-GB">en-GB/en-GB.com_miniorange_oauthserver.ini</language>
            <language tag="en-GB">en-GB/en-GB.com_miniorange_oauthserver.sys.ini</language>
		</languages>
	</administration>
	<updateservers>
		<server type="extension" name="Github/Jefferson49/Joomla-OAuth2-Server">https://raw.githubusercontent.com/Jefferson49/Joomla-OAuth2-Server/updates/updates.xml</server>
	</updateservers>
</extension>